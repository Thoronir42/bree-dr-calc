{
  "general": {
    "type": "structure",
    "schema": {
      "name": {
        "type": "text",
        "required": true
      },
      "breedingStation": {
        "type": "relation:breedingStation",
        "required": true
      },
      "gender": {
        "type": "bestiary:gender",
        "required": false
      },
      "evidenceCode": {
        "type": "text"
      },
      "birthDay": {
        "type": "date"
      }
    }
  },
  "lineage": {
    "type": "structure",
    "schema": {
      "father": {
        "type": "relation:beast",
        "itemFilter": [
          ["!", ["=", "general.gender", "f"]]
        ]
      },
      "mother": {
        "type": "relation:beast",
        "itemFilter": [
          ["!", ["=", "general.gender", "m"]]
        ]
      },
      "wright": {
        "type": "number",
        "format": "percent",
        "precision": 8
      }
    }
  }
}
